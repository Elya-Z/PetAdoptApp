<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PetAdoptApp.AddExercisePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Добавление упражнения"
    BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Frame Padding="5" BackgroundColor="White">
                <Entry x:Name="TitleEntry" Placeholder="Заголовок упражнения" />
            </Frame>
            <Frame Padding="5" BackgroundColor="White">
                <Editor
                    x:Name="DescriptionEntry"
                    HeightRequest="100"
                    Placeholder="Описание упражнения" />
            </Frame>
            <Button
                Clicked="AddExercise"
                HorizontalOptions="Fill"
                Text="Добавить упражнение"
                TextColor="White" />
            <Button
                Clicked="GoBack"
                Text="Назад"
                TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>