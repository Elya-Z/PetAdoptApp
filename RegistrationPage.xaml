<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PetAdoptApp.RegistrationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F4F4F4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout
            Grid.Row="0"
            Padding="15"
            HorizontalOptions="Center"
            Spacing="8"
            VerticalOptions="EndAndExpand">
            <Label
                FontFamily="Arial"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Регистрация"
                TextColor="#333333"
                VerticalOptions="Center" />
        </StackLayout>

        <StackLayout
            Grid.Row="1"
            Padding="20"
            Spacing="15">
            <Border
                Padding="10"
                Stroke="#CCCCCC"
                StrokeShape="RoundRectangle 5"
                StrokeThickness="1">
                <Entry
                    x:Name="famx"
                    Placeholder="Фамилия"
                    TextColor="Black" />
            </Border>
            <Border
                Padding="10"
                Stroke="#CCCCCC"
                StrokeShape="RoundRectangle 5"
                StrokeThickness="1">
                <Entry
                    x:Name="namex"
                    Placeholder="Имя"
                    TextColor="Black" />
            </Border>
            <Border
                Padding="10"
                Stroke="#CCCCCC"
                StrokeShape="RoundRectangle 5"
                StrokeThickness="1">
                <Entry
                    x:Name="patrx"
                    Placeholder="Отчество"
                    TextColor="Black" />
            </Border>
            <Border
                Padding="10"
                Stroke="#CCCCCC"
                StrokeShape="RoundRectangle 5"
                StrokeThickness="1">
                <Entry
                    x:Name="loginx"
                    Placeholder="Введите логин"
                    TextColor="Black" />
            </Border>

            <Border
                Padding="10"
                Stroke="#CCCCCC"
                StrokeShape="RoundRectangle 5"
                StrokeThickness="1">
                <Grid ColumnDefinitions="*,40">

                    <Entry
                        x:Name="PasswordEntryOne"
                        Grid.Column="0"
                        Margin="0,0,0,-8"
                        IsPassword="True"
                        Placeholder="Пароль"
                        PlaceholderColor="LightGray"
                        TextColor="Black" />
                    <ImageButton
                        Grid.Column="1"
                        Aspect="AspectFit"
                        Clicked="PasswordOnOne"
                        HeightRequest="40"
                        HorizontalOptions="Center"
                        Source="not_visible.png"
                        VerticalOptions="Center" />
                </Grid>
            </Border>

            <Border
                Padding="10"
                Stroke="#CCCCCC"
                StrokeShape="RoundRectangle 5"
                StrokeThickness="1">
                <Entry
                    x:Name="PasswordEntryTwo"
                    Grid.Column="0"
                    IsPassword="True"
                    Placeholder="Введите повторно пароль"
                    TextColor="Black" />
            </Border>
        </StackLayout>

        <StackLayout Grid.Row="2" Spacing="10">

            <Button
                BackgroundColor="#FF6F61"
                Clicked="GoToMenu"
                Text="Зарегистрироваться"
                VerticalOptions="CenterAndExpand"
                WidthRequest="300" />
            <Button
                Margin="0,0,0,10"
                BackgroundColor="#FF6F61"
                Clicked="GoToMain"
                Text="Обратно на вход"
                WidthRequest="300" />

        </StackLayout>
    </Grid>
</ContentPage>